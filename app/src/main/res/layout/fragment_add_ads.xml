<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddAds.AddAds">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/photoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Название"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/addAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="Добавить Адрес"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photoName" />

            <Button

                android:id="@+id/btnSelectedImages"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="210dp"
                android:layout_marginBottom="20dp"
                android:text="Выбрать изображение"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addAddress" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addAddress" />

            <Button
                android:id="@+id/sendAds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Опубликовать"
                app:layout_constraintBottom_toTopOf="@+id/progressBar_main"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeSeekBar" />

            <EditText
                android:id="@+id/textViewDirection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/direction_add_ads"
                android:gravity="top"
                android:hint="Описание"
                android:minHeight="100dp"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnSelectedImages" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/arrayPriceRVAddAds"
                app:layout_constraintTop_toBottomOf="@+id/textViewDirection"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                    />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/linLayoutGroupsBtnsTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrayPriceRVAddAds">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/form_from_btn_time_arenda_uncheck"
                android:text="Ч"
                android:gravity="center"
                android:id="@+id/hoursBtnTime"
                app:layout_constraintStart_toStartOf="@+id/linLayoutAddAds"
                app:layout_constraintTop_toBottomOf="@+id/textViewDirection" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/form_from_btn_time_arenda_uncheck"
                android:gravity="center"
                android:text="Д"
                android:id="@+id/daysBtnTime"
                app:layout_constraintStart_toEndOf="@+id/hoursBtnTime"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewDirection" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/form_from_btn_time_arenda_uncheck"
                android:text="Н"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:id="@+id/weekBtnTime"
                app:layout_constraintStart_toEndOf="@+id/daysBtnTime"
                app:layout_constraintTop_toBottomOf="@+id/textViewDirection" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/form_from_btn_time_arenda_uncheck"
                android:text="М"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:id="@+id/mouthBtnTime"
                app:layout_constraintStart_toEndOf="@+id/weekBtnTime"
                app:layout_constraintTop_toBottomOf="@+id/textViewDirection" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/form_from_btn_time_arenda_uncheck"
                android:text="Г"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:id="@+id/yearsBtnTime"
                app:layout_constraintStart_toEndOf="@+id/mouthBtnTime"
                app:layout_constraintTop_toBottomOf="@+id/textViewDirection" />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/linLayoutBubbleSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linLayoutGroupsBtnsTime">

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/seekBarBubbleTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bsb_bubble_color="#0EF4CD"
                    app:bsb_bubble_text_color="@android:color/white"
                    app:bsb_max="24"
                    app:bsb_progress="0"
                    app:bsb_second_track_color="#0EF4CD"
                    app:bsb_section_count="24"
                    app:bsb_section_text_color="@color/black"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_touch_to_seek="true" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/priceTextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:hint="Цена"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                app:boxStrokeColor="@android:color/darker_gray"
                app:counterEnabled="true"
                app:counterMaxLength="7"
                app:counterTextColor="@android:color/black"
                app:hintTextColor="@android:color/darker_gray"
                app:layout_constraintBottom_toTopOf="@+id/loginTextInputLayout"
                app:layout_constraintEnd_toEndOf="@+id/loginTextInputLayout"
                app:layout_constraintStart_toStartOf="@+id/loginTextInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/linLayoutBubbleSeekBar">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/priceEditText"
                    android:maxLength="7"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/timeSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавить"
                app:layout_constraintEnd_toEndOf="@+id/linLayoutBubbleSeekBar"
                app:layout_constraintStart_toStartOf="@id/linLayoutBubbleSeekBar"
                app:layout_constraintTop_toBottomOf="@+id/priceTextInputLayout" />

            <ProgressBar
                android:id="@+id/progressBar_main"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTint="@android:color/holo_orange_dark"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>